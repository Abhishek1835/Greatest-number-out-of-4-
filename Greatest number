#include <stdio.h>

int main() {
    int n1;
    int n2;
    int n3;
    int n4;
    
    printf("enter the number n1:\n");
    scanf("%d",&n1);
    
    printf("enter the number n2:\n");
    scanf("%d",&n2);
    
    printf("enter the number n3:\n");
    scanf("%d",&n3);
    
    printf("enter the number n4:\n");
    scanf("%d",&n4);
    
    if(n1>n2 && n2>n3 && n3>n4){
        printf("n1 is greatest ");
    }else if(n2>n1 && n2>n3 && n2>n4) {
        printf("n2 is greatest ");
    }else if(n3>n1 && n3>n2 && n3>n4){
        printf("n3 is greatest ");
    }else {
        printf("n4 is greatest");
    }
    return 0;

    
}
